{% extends "base.html.twig" %}

{% block body %}
{# body block #}

{% block navbar %}
{# Navbar block #}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand" href="https://www.trenta.fr/">T R E N T <span class="text-danger">A</span></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
    </div>  
</nav>
{# End Navbar block #}
{% endblock %}

{% block jumbotron %}
{# jumbotron block #}

<div class="container pb-2">
    <div class="jumbotron">
        <h1 class="display-3">Bonjour TRENT<span class="text-danger">A</span></h1>
        <hr class="my-4">
        <div class="lead">
            <div>
                <ul class="nav nav-tabs my-3">
                    <li class="nav-item">
                      <a class="nav-link active" data-toggle="tab" href="#objectif">Objectif</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" data-toggle="tab" href="#prerequis">Pré-requis</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#fonctionalites">Fonctionnalités attendues</a>
                      </li>
                  </ul>
                  <div id="myTabContent" class="tab-content">
                    <div class="tab-pane fade active show" id="objectif">
                      <ul class="list-group">
                        <li class="list-group-item">Développer un mini-site listant des produits sur une stack Symfony + MySQL + docker</li>
                      </ul>
                    </div>
                    <div class="tab-pane fade" id="prerequis">
                        <ul class="list-group">
                            <li class="list-group-item">Utilisation de Docker (avec docker-compose.yml de préférence)</li>
                            <li class="list-group-item">Symfony 4 ou 5</li>
                            <li class="list-group-item">Bootstrap 4</li>
                          </ul>
                    </div>
                    <div class="tab-pane fade" id="fonctionalites">
                        <ul class="list-group">
                            <li class="list-group-item">Utilisation d'une stack Docker</li>
                            <li class="list-group-item">Une entité <mark>Product</mark> simplifiée avec titre, description, image, prix</li>
                            <li class="list-group-item">Remplir les données avec des fixtures</li>
                            <li class="list-group-item">Affichage de la liste de produits sur la page de démarrage de l'app Symfony</li>
                            <li class="list-group-item">Layout et composants Bootstrap de base (mobile-first)</li>
                            <li class="list-group-item">Bonus : sur la page de démarrage, lister des articles issus d'un site wordpress au choix, ou de l'API github de démo, etc.</li>
                          </ul>
                      </div>
                  </div>
            </div>
        <a class="mt-5 btn btn-secondary btn-lg" href="#pro" role="button">Résultat du test</a>
        </div>
    </div>
</div>
{# End Jumbotron block #}
{% endblock %}

<div class="container my-5">
    <h1 class="display-4 my-5 text-center" id="pro">Liste des produits</h1>

    <div class="row pt-2">
        {% for product in products %}
            <div class="col-md-4">
                <div class="card mb-3">
                    <h3 class="card-header">{{ product.title }}</h3>
                    <img src="{{ product.image }}" alt="image du produit" style="height: 200px; width: 100%; display: block">
                    <div class="card-body">
                      <p class="card-text">{{ product.description }}</p>
                    </div>
                        <div class="card-footer text-muted">
                        {{ product.price }} €
                        </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{# End Body block #}

{% endblock %}